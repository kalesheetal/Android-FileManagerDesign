<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="File Manager"
        android:textColor="@color/black"

        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.050000012">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_library_music_24"
                ></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_video_library_24"></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_image_24"></de.hdodenhof.circleimageview.CircleImageView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Music"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="Videos"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="Pictures"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="70.91MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="172MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="99.63MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_insert_drive_file_24"
                tools:layout_editor_absoluteX="67dp"
                tools:layout_editor_absoluteY="535dp"></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_article_24"></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_adb_24"></de.hdodenhof.circleimageview.CircleImageView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Documents"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="Zips"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="APKs"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="250MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="0.00B"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="78.00MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_offline_bolt_24"></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_call_24"

                ></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:outlineAmbientShadowColor="@color/purple_200"
                android:paddingTop="30dp"
                android:src="@drawable/ic_baseline_more_horiz_24"></de.hdodenhof.circleimageview.CircleImageView>

        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Messanger"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="WhatsApp"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="More apps"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="0.00B"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="539MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
            <TextView
                android:text="7.68MB"
                android:gravity="center"
                android:textSize="20dp"

                android:textStyle="bold"
                ></TextView>
        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.339">


    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>